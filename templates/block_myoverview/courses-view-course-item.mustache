{{!
    @template block_myoverview/courses-view-course-item

    This template renders the course summary (view by courses) for the myoverview block.

    Example context (json):
    {
        "fullnamedisplay": "course 3",
        "viewurl": "https://www.google.com",
        "summary": "It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
    }
}}
<div class="col-lg-6">
    <div class="card m-b-1 courses-view-course-item">
        <div class="card-block course-info-container" id="course-info-container-{{id}}" style="background-image: url({{coverimageurl}});
background-position: top left;
background-size: cover;">
            <div class="hidden-sm-up hidden-phone">
                <div class="media">
                    {{> block_myoverview/progress-chart}}
                    <h4 class="h5"><a href="{{viewurl}}" class="{{^visible}}dimmed{{/visible}}">{{{fullnamedisplay}}}</a></h4>
                </div>
            </div>
            <div class="hidden-xs-down visible-phone">
                <div class="media">
                    <div class="media-left">
                        <div class="media-object">
                            {{> block_myoverview/progress-chart}}
                        </div>
                    </div>
                    <div class="media-body">
                        <h4 class="h5"><a href="{{viewurl}}" class="{{^visible}}dimmed{{/visible}}">{{{fullnamedisplay}}}</a></h4>
                        <p class="summary">
                            {{#shortentext}} 100, {{summary}}{{/shortentext}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-actions pull-right">
            <a href="" class="btn btn-success">Open</a>
        </div>
        <div class="card-badges">
            {{#duration}}<span class="badge badge-pill badge-info"><i class="fa fa-clock-o"></i> {{duration}}</span>{{/duration}}
            {{#experience}}<span class="badge badge-pill badge-info"><i class="fa fa-tachometer" aria-hidden="true"></i> {{experience}}</span>{{/experience}}
        </div>
    </div>
</div>

{{!
    @template block_myoverview/allcourses-view

    This template renders the all courses view for the myoverview block.

    Example context (json):
    {}
}}
<div id="allcourses-view-{{uniqid}}" data-region="allcourses-view">
    <div class="row text-xs-center m-y-1 p-t-1">
        <form action="#allcourses-tab" class="m-x-auto">
            <div class="col-lg-12">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control rounded-left" name="search" value="{{#searchcriteria.search}}{{searchcriteria.search}}{{/searchcriteria.search}}" placeholder="{{#str}} searchcourses {{/str}}">
                            <input type="hidden" name="myoverviewtab" value="allcourses"/>
                            <span class="input-group-btn">
                                <button class="btn btn-light my-2 my-sm-0 rounded-right" type="submit">Search</button>
                            </span>
                        </div>
                        <ul class="nav nav-pills">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-group" aria-hidden="true"></i> Role</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Sales</a>
                                    <a class="dropdown-item" href="#">Property Management</a>
                                    <a class="dropdown-item" href="#">General</a>
                                    <a class="dropdown-item" href="#">Leadership</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-tachometer" aria-hidden="true"></i> Experience Level</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Novice</a>
                                    <a class="dropdown-item" href="#">Experienced</a>
                                    <a class="dropdown-item" href="#">Advanced</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-clock-o"></i> Duration</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">10 mins</a>
                                    <a class="dropdown-item" href="#">30 mins</a>
                                    <a class="dropdown-item" href="#">1 hour</a>
                                </div>
                            </li>
                        </ul>
                    </div>
            </div>
        </form>
    </div>

    <div class="tab-content">
        <div class="tab-pane active fade in" id="myoverview_allcourses_dates">
            {{> block_myoverview/allcourses-view-courses }}
        </div>
        <div class="tab-pane fade" id="myoverview_allcourses_courses">
            {{> block_myoverview/allcourses-view-courses }}
        </div>
    </div>
</div>
{{#js}}
require(['jquery', 'core/custom_interaction_events'], function($, customEvents) {
    var root = $('#allcourses-view-{{uniqid}}');
    customEvents.define(root, [customEvents.events.activate]);
    root.on(customEvents.events.activate, '[data-toggle="btns"] > .btn', function() {
        root.find('.btn.active').removeClass('active');
    });
});
{{/js}}
